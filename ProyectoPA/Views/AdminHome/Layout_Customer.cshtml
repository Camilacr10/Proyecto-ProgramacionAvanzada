
@{
    ViewBag.Title = "Layout_Customer";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body style="background-color: #ffffff; font-family: Arial, sans-serif;">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-md" style="background-color: #c98a27;">
            <div class="container d-flex justify-content-between align-items-center">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand text-light">
                    <img src="~/Imagenes/adopciones/logo.png" alt="Logo" style="width: 100px;">
                </a>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">@Html.ActionLink("Acerca de nosotros", "About", "Home", new { area = "" }, new { @class = "nav-link text-light" })</li>
                    <li class="nav-item">@Html.ActionLink("Listados de Mascotas", "listado", "ListadoM", new { area = "" }, new { @class = "nav-link text-light" })</li>
                    <li class="nav-item">@Html.ActionLink("Donaciones", "Index", "Donaciones", new { area = "" }, new { @class = "nav-link text-light" })</li>
                    <li class="nav-item">@Html.ActionLink("Adopciones", "Index", "Adopcions", new { area = "" }, new { @class = "nav-link text-light" })</li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- El RenderBody es para indicar donde se van a cargar el contenido de las vistas que lo llaman -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-warning text-black py-3 mt-5">
        <div class="container text-center">
            <p class="mb-2">&copy; Derechos Reservados</p>
            <div>
                <a href="https://facebook.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoFacebook.svg" alt="Facebook" style="width: 60px;">
                </a>
                <a href="https://instagram.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoInsta.png" alt="Instagram" style="width: 40px;">
                </a>
                <a href="https://twitter.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoTwitter.svg" alt="Twitter" style="width: 30px;">
                </a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
