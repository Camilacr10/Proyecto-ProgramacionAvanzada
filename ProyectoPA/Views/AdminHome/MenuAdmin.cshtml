@model ProyectoPA.Adopcion

@{
    ViewBag.Title = "Área Administrativa";
    Layout = "~/Views/AdminHome/Layout_Admin_Home.cshtml";
}

<!-- Sección de bienvenida -->
<section class="py-4" style="background-color: #d98e2f; color: white;">
    <div class="container d-flex align-items-center">
        <div>
            <img src="~/imagenes/inicioAdmin/perroAdmin.png" alt="Perro Administrador" style="width: 300px; border-radius: 65%;">
        </div>
        <div class="ms-auto text-end" style="max-width: 400px;">
            <h1 style="font-size: 2em; line-height: 1.2;">Bienvenidos</h1>
            <h2 style="font-size: 3em; font-weight: bold;">Área<br>Administrativa</h2>
        </div>
    </div>
</section>

