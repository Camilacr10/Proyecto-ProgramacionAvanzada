                    <div style="width: 150px; height: 150px; background-color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-top: 15px;">
                        <img src="~/imagenes/inicioAdmin/GestionGatos.png" style="width: 120px; height: 120px;" alt="Mascotas">
                    </div>
                </div>
                <div class="card-body">
                    @Html.ActionLink("Gestión de Mascotas", "Index", "AdminMascotas", new { area = "" }, new { @class = "btn w-100", style = "background-color: #d98e2f; color: white;" })
