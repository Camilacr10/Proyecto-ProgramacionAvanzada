
@{
    ViewBag.Title = "Layout_Admin_Admin";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body style="background-color: #ffffff; font-family: Arial, sans-serif;">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-md" style="background-color: #c98a27;">
            <div class="container d-flex justify-content-between align-items-center">
                <a href="@Url.Action("MenuAdmin", "AdminHome")" class="navbar-brand text-light">
                    <img src="~/Imagenes/adopciones/logo.png" alt="Logo" style="width: 100px;">
                </a>
                <ul class="nav">
                    <li class="nav-item"><a href="acercaNosotros.html" class="nav-link text-light">Acerca de Nosotros</a></li>
                    <li class="nav-item"><a href="/ListadoM/listado" class="nav-link text-light">Listado de Mascotas</a></li>
                    <li class="nav-item"><a href="/Donaciones/Index" class="nav-link text-light">Donaciones</a></li>
                    <li class="nav-item">
                        <a href="/Adopcions/Index" class="nav-link text-light">Adopciones</a>
                    </li>

                </ul>
            </div>
        </nav>
    </header>

    <!-- El RenderBody es para indicar donde se van a cargar el contenido de las vistas que lo llaman -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-warning text-black py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <p class="mb-0">&copy; Derechos Reservados</p>
            <div>
                <a href="https://facebook.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoFacebook.svg" alt="Facebook" style="width: 60px;">
                </a>
                <a href="https://instagram.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoInsta.png" alt="Instagram" style="width: 40px;">
                </a>
                <a href="https://twitter.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoTwitter.svg" alt="Twitter" style="width: 30px;">
                </a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
