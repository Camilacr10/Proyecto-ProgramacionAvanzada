@{
    ViewBag.Title = "Layout_Admin_Admin";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body style="background-color: #ffffff; font-family: Arial, sans-serif;">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-md" style="background-color: #c98a27;">
            <div class="container d-flex justify-content-between align-items-center">
                <a href="@Url.Action("MenuAdmin", "AdminHome")" class="navbar-brand text-light">
                    <img src="~/Imagenes/adopciones/logo.png" alt="Logo" style="width: 100px;">
                </a>
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">@Html.ActionLink("Listados de Mascotas", "listado", "ListadoM", new { area = "" }, new { @class = "nav-link text-light" })</li>
                    <li class="nav-item">@Html.ActionLink("Gestión de Mascotas", "Index", "AdminMascotas", new { area = "" }, new { @class = "nav-link text-light" })</li>
                    <li class="nav-item">@Html.ActionLink("Gestión de Adopciones", "Index", "AdminAdopcions", new { area = "" }, new { @class = "nav-link text-light" })</li>
                    <li class="nav-item">@Html.ActionLink("Gestión de Donaciones", "Index", "AdminDonacions", new { area = "" }, new { @class = "nav-link text-light" })</li>
                    <li class="nav-item">@Html.ActionLink("Gestión de Voluntarios", "Index", "AdminVoluntarios", new { area = "" }, new { @class = "nav-link text-light" })</li>
                    <li class="nav-item"><a href="@Url.Action("Login", "Usuarios")" class="btn text-white animate__animated animate__zoomIn nav-link" style="background-color: #d98e2f; border-radius: 20px;">Iniciar Sesión</a></li>
                    <li class="nav-item"><a href="@Url.Action("Index", "Usuarios")" class="btn" style="border: none; background-color: transparent; padding: 0; margin: 10%"><div style="width: 40px; height: 40px; border-radius: 50%; overflow: hidden; border: 2px solid #d98e2f; display: flex; align-items: center; justify-content: center;"><img src="~/Imagenes/adopciones/logoPerfil.png" alt="Perfil" style="width: 100%; height: 100%; object-fit: cover; display: block;"></div></a></li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- El RenderBody es para indicar donde se van a cargar el contenido de las vistas que lo llaman -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-warning text-black py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <p class="mb-0">&copy; Derechos Reservados</p>
            <div>
                <a href="https://facebook.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoFacebook.svg" alt="Facebook" style="width: 60px;">
                </a>
                <a href="https://instagram.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoInsta.png" alt="Instagram" style="width: 40px;">
                </a>
                <a href="https://twitter.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoTwitter.svg" alt="Twitter" style="width: 30px;">
                </a>
            </div>
        </div>
    </footer>

    <!-- jQuery (necesario para usar el símbolo $ en los scripts) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS (para que funcionen los modales, botones, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Aquí se cargan scripts extras desde las vistas que usan este layout -->
    @RenderSection("scripts", required: false)

    <!-- Modal general que se puede usar en cualquier vista -->
    <div class="modal fade" id="modalGeneral" tabindex="-1" aria-labelledby="modalGeneralLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <!-- Modal grande -->
            <div class="modal-content">
                <!-- Contenedor principal del modal -->
                <!-- Encabezado del modal -->
                <div class="modal-header" style="background-color: #f0ad4e; color: white;">
                    <!-- Título del modal -->
                    <h5 class="modal-title" id="modalGeneralLabel">Información</h5>

                    <!-- Botón para cerrar el modal (esquina superior derecha) -->
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <!-- Cuerpo del modal (aquí se mostrará el contenido dinámico) -->
                <div class="modal-body" id="contenidoModalGeneral">
                    <!-- Este contenido será insertado con JavaScript -->
                </div>

                <!-- Pie del modal con botón para cerrar -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>

            </div>
        </div>
    </div>

</body>

</html>