@model IEnumerable<ProyectoPA.Usuario>

@{
    ViewBag.Title = "Gestión de Usuarios";
    Layout = "~/Views/AdminHome/Layout_Admin_Home.cshtml";
}

<!-- Sección de encabezado con imagen de fondo -->
<section class="position-relative text-center text-white"
         style="background-image: url('../../imagenes/gestion/generalgestion.png'); background-size: cover; background-position: center; height: 500px;">
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(217, 142, 47, 0.5);"></div>
    <div class="container d-flex justify-content-center align-items-center h-100 position-relative">
        <h1 class="m-0" style="font-size: 3em;">Gestión de Usuarios</h1>
    </div>
</section>

<!-- Sección de botón para agregar usuario -->
<section class="py-4 bg-light">
    <div class="container d-flex justify-content-between">
        @Html.ActionLink("Agregar Usuario", "Create", "AdminUsuarios", null, new { @class = "btn btn-block", style = "background-color: #d98e2f; color: #ffffff;" })
        <div class="card text-center" style="background-color: #d98e2f; color: #ffffff; padding: 10px; width: 200px;">
            <h5>Total de Usuarios</h5>
            <h3 class="m-0"><i class="fas fa-users"></i> @Model.Count()</h3>
        </div>
    </div>
</section>

<!-- Tabla de gestión de usuarios -->
<section id="usuarios" class="py-4">
    <div class="container">
        <div class="card">
            <div class="card-header text-center text-white" style="background-color: #d98e2f;">
                <h4>Listado de Usuarios</h4>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0">
                    <thead class="text-white" style="background-color: #c98a27;">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.username)</th>
                            <th>@Html.DisplayNameFor(model => model.nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.apellido)</th>
                            <th>@Html.DisplayNameFor(model => model.correo)</th>
                            <th>@Html.DisplayNameFor(model => model.telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.activo)</th>
                            <th>@Html.DisplayNameFor(model => model.Rol)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.username)</td>
                                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.apellido)</td>
                                <td>@Html.DisplayFor(modelItem => item.correo)</td>
                                <td>@Html.DisplayFor(modelItem => item.telefono)</td>
                                <td>@Html.DisplayFor(modelItem => item.activo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Rol.nombre)</td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.id_usuario }, new { @class = "btn btn-warning btn-sm" })
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id_usuario }, new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>