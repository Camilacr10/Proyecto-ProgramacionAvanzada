@model ProyectoPA.Adopcion

@{
    ViewBag.Title = "Crear Adopción";
    Layout = "~/Views/AdminHome/Layout_Admin_Home.cshtml";
}

<!-- Sección de encabezado con imagen de fondo -->
<section class="position-relative text-center text-white"
         style="background-image: url('../../imagenes/gestion/generalgestion.png'); background-size: cover; background-position: center; height: 500px;">
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(217, 142, 47, 0.5);"></div>
    <div class="container d-flex justify-content-center align-items-center h-100 position-relative">
        <h1 class="m-0" style="font-size: 3em;">Gestión de Adopciones</h1>
    </div>
</section>

<section class="container my-5">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Adopción</h4>
            <hr />

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.id_usuario, "Usuario", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("id_usuario", null, "Seleccionar Usuario", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_usuario, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.id_mascota, "Mascota", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("id_mascota", null, "Seleccionar Mascota", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_mascota, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.fecha_adopcion, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.fecha_adopcion, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.fecha_adopcion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Crear" class="btn btn-primary" style="background-color: #d98e2f; color: white;" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</section>
