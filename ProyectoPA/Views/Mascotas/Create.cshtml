@model ProyectoPA.Mascota

@{
    ViewBag.Title = "Crear Mascota";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body style="background-color: #ffffff; font-family: Arial, sans-serif;">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-md" style="background-color: #c98a27;">
            <div class="container d-flex justify-content-between align-items-center">
                <a href="inicioAdmin.html" class="navbar-brand text-light">
                    <img src="~/Imagenes/adopciones/logo.png" alt="Logo" style="width: 100px;">
                </a>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a href="listadoMascotas.html" class="nav-link text-light">Listado de Mascotas</a></li>
                    <li class="nav-item"><a href="adminUsuarios.html" class="nav-link text-light">Gestión de Usuarios</a></li>
                    <li class="nav-item"><a href="adminMascota.html" class="nav-link text-light">Gestión de Mascotas</a></li>
                    <li class="nav-item"><a href="adminAdopciones.html" class="nav-link text-light">Gestión de Adopciones</a></li>
                    <li class="nav-item"><a href="adminDonaciones.html" class="nav-link text-light">Gestión de Donaciones</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Sección de encabezado con imagen de fondo -->
    <section class="position-relative text-center text-white"
             style="background-image: url('../../imagenes/gestion/generalgestion.png'); background-size: cover; background-position: center; height: 500px;">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(217, 142, 47, 0.5);"></div>
        <div class="container d-flex justify-content-center align-items-center h-100 position-relative">
            <h1 class="m-0" style="font-size: 3em;">Gestión de Mascotas</h1>
        </div>
    </section>

    <section class="container my-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Mascota</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.edad, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.edad, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.especie, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownList("especie", new SelectList(new[] { "Gato", "Perro" }), "Seleccionar", new { @class = "form-control" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.raza, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.raza, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.peso, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.peso, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.sexo, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownList("sexo", new SelectList(new[] { "Macho", "Hembra" }), "Seleccionar", new { @class = "form-control" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.castrado, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownList("castrado", new SelectList(new[] { "Sí", "No" }), "Seleccionar", new { @class = "form-control" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.vacunado, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownList("vacunado", new SelectList(new[] { "Sí", "No" }), "Seleccionar", new { @class = "form-control" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.desparasitado, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownList("desparasitado", new SelectList(new[] { "Sí", "No" }), "Seleccionar", new { @class = "form-control" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "form-label" })
                    @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", rows = 3 })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.fecha_rescate, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.fecha_rescate, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.ruta_imagen, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.ruta_imagen, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.disponibilidad, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownList("disponibilidad", new SelectList(new[] { "Sí", "No" }), "Seleccionar", new { @class = "form-control" })
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Crear" class="btn btn-primary" style="background-color: #d98e2f; color: white;" />
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-secondary" })
        </div>

    </section>

    <footer class="bg-warning text-black py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <p class="mb-0">&copy; Derechos Reservados</p>
            <div>
                <a href="https://facebook.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoFacebook.svg" alt="Facebook" style="width: 60px;">
                </a>
                <a href="https://instagram.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoInsta.png" alt="Instagram" style="width: 40px;">
                </a>
                <a href="https://twitter.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoTwitter.svg" alt="Twitter" style="width: 30px;">
                </a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
