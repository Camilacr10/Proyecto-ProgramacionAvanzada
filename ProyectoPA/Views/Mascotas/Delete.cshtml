@model ProyectoPA.Mascota

@{
    ViewBag.Title = "Eliminar Mascota";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body style="background-color: #ffffff; font-family: Arial, sans-serif;">

    <header>
        <nav class="navbar navbar-expand-md" style="background-color: #c98a27;">
            <div class="container d-flex justify-content-between align-items-center">
                <a href="inicioAdmin.html" class="navbar-brand text-light">
                    <img src="~/Imagenes/adopciones/logo.png" alt="Logo" style="width: 100px;">
                </a>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a href="listadoMascotas.html" class="nav-link text-light">Listado de Mascotas</a></li>
                    <li class="nav-item"><a href="adminUsuarios.html" class="nav-link text-light">Gestión de Usuarios</a></li>
                    <li class="nav-item"><a href="adminMascota.html" class="nav-link text-light">Gestión de Mascotas</a></li>
                    <li class="nav-item"><a href="adminAdopciones.html" class="nav-link text-light">Gestión de Adopciones</a></li>
                    <li class="nav-item"><a href="adminDonaciones.html" class="nav-link text-light">Gestión de Donaciones</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <h2 class="text-center my-4">Eliminar Mascota</h2>

    <h3 class="text-danger">¿Está seguro que desea eliminar esta mascota?</h3>
    <div class="card p-4 mb-4 d-flex flex-column align-items-center mx-auto" style="max-width: 800px;">
        <h4 class="mb-3 text-center">Detalles de la Mascota</h4>
        <dl class="row d-flex justify-content-center">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.nombre)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.edad)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.edad)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.especie)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.especie)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.raza)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.raza)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.peso)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.peso)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.sexo)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.sexo)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.castrado)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.castrado)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.vacunado)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.vacunado)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.desparasitado)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.desparasitado)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.descripcion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.descripcion)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.fecha_rescate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.fecha_rescate)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ruta_imagen)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ruta_imagen)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions text-center">
                <input type="submit" value="Eliminar" class="btn btn-danger me-3" />
                @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>

    <footer class="bg-warning text-black py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <p class="mb-0">&copy; Derechos Reservados</p>
            <div>
                <a href="https://facebook.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoFacebook.svg" alt="Facebook" style="width: 60px;">
                </a>
                <a href="https://instagram.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoInsta.png" alt="Instagram" style="width: 40px;">
                </a>
                <a href="https://twitter.com/salvandounaspatitas" class="mx-2">
                    <img src="~/Imagenes/adopciones/logoTwitter.svg" alt="Twitter" style="width: 30px;">
                </a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
