@{
    Layout = null;
}
@model ProyectoPA.Usuario

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #f8f9fa; margin: 0; height: 100vh; display: flex;">
    <div class="left-column" style="flex: 1; display: flex; justify-content: center; align-items: center; padding: 20px;">
        <div class="login-container" style="width: 100%; max-width: 400px; padding: 40px;">
            <img src="~/imagenes/adopciones/logo.png" alt="Logo" class="logo" style="display: block; margin: 0 auto 20px; max-width: 300px; height: auto;" />
            <h5 class="text-center">Iniciar Sesión</h5>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    @Html.Label("Email:")
                    @Html.TextBox("correo", null, new { @class = "form-control", placeholder = "Ingresa tu Email" })
                </div>
                <div class="mb-3">
                    @Html.Label("Password:")
                    @Html.Password("password", null, new { @class = "form-control", placeholder = "Ingresa tu Contraseña" })
                </div>
                <div class="text-sm-end">
                    <span class="text-blue" style="color: blue; text-decoration: underline; cursor: pointer;">¿Olvidaste tu contraseña?</span>
                </div>
                <div class="text-sm-end">
                    <button type="submit" class="btn btn-login" style="background-color: #c98a27; color: white; margin-top: 20px;">Login</button>
                </div>
                <div class="text-center mt-3">
                    <span>¿No tienes una cuenta? <span class="text-blue" style="color: blue; text-decoration: underline; cursor: pointer;" onclick="location.href='@Url.Action("Register", "Usuarios")'">Regístrate</span></span>
                </div>
            }
        </div>
    </div>
    <div class="right-column" style="flex: 1; display: flex; align-items: flex-end; justify-content: flex-end; height: 100%; padding: 0; overflow: hidden;">
        <img src="~/imagenes/usuario/pergat.png" alt="Imagen de Usuario" style="width: auto; height: 100%; object-fit: cover; transform: translateX(5%);" />
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>