@model ProyectoPA.Usuario

@{
    Layout = null;
    ViewBag.Title = "Registro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #f8f9fa; margin: 0; height: 100vh; display: flex; justify-content: center; align-items: center;">
    <div class="login-container" style="width: 100%; max-width: 400px; padding: 40px; background-color: white; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <img src="~/imagenes/adopciones/logo.png" alt="Logo" class="logo" style="display: block; margin: 0 auto 20px; max-width: 300px; height: auto;" />
        <h5 class="text-center">Registro de Usuario</h5>
        @using (Html.BeginForm("Register", "Usuarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                @Html.Label("Email:")
                @Html.TextBox("correo", null, new { @class = "form-control", placeholder = "Ingresa tu Email" })
            </div>
            <div class="mb-3">
                @Html.Label("Contraseña:")
                @Html.Password("password", null, new { @class = "form-control", placeholder = "Ingresa tu Contraseña" })
            </div>
            <div class="mb-3">
                @Html.Label("Foto de perfil:")
                <input type="file" name="profilePicture" class="form-control" accept="image/*" />
            </div>
            <div class="mb-3">
                @Html.Label("Algo sobre mí:")
                @Html.TextArea("aboutme", null, new { @class = "form-control", placeholder = "Algo sobre mí" })
            </div>
            
                <button type="submit" class="btn btn-login form-control" style="background-color: #c98a27; color: white;">Registrarse</button>
            
            <div class="text-center mt-3">
                <span>¿Ya tienes una cuenta? <span class="text-blue" style="color: blue; text-decoration: underline; cursor: pointer;" onclick="location.href='@Url.Action("Login", "Usuarios")'">Inicia Sesión Aquí</span></span>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>