@model IEnumerable<ProyectoPA.Voluntario>

@{
    ViewBag.Title = "Gestión de Voluntarios";
    Layout = "~/Views/AdminHome/Layout_Admin_Home.cshtml";
}

<!-- Sección de encabezado con imagen de fondo -->
<section class="position-relative text-center text-white"
         style="background-image: url('../../imagenes/gestion/generalgestion.png'); background-size: cover; background-position: center; height: 500px;">
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(217, 142, 47, 0.5);"></div>
    <div class="container d-flex justify-content-center align-items-center h-100 position-relative">
        <h1 class="m-0" style="font-size: 3em;">Gestión de Voluntarios</h1>
    </div>
</section>

<!-- Sección de botón para agregar voluntario -->
<section class="py-4 bg-light">
    <div class="container d-flex justify-content-between">
        @Html.ActionLink("Registrar Voluntario", "Create", "AdminVoluntarios", null, new { @class = "btn btn-block", style = "background-color: #d98e2f; color: #ffffff;" })
        <div class="card text-center" style="background-color: #d98e2f; color: #ffffff; padding: 10px; width: 200px;">
            <h5>Total de Voluntarios</h5>
            <h3 class="m-0"><i class="fas fa-users"></i> @Model.Count()</h3>
        </div>
    </div>
</section>

<!-- Tabla de gestión de voluntarios -->
<section id="voluntarios" class="py-4">
    <div class="container">
        <div class="card">
            <div class="card-header text-center text-white" style="background-color: #d98e2f;">
                <h4>Listado de Voluntarios</h4>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0">
                    <thead class="text-white" style="background-color: #c98a27;">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                            <th>@Html.DisplayNameFor(model => model.Correo)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.Edad)</th>
                            <th>@Html.DisplayNameFor(model => model.Intereses)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                                <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                                <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                                <td>@Html.DisplayFor(modelItem => item.Intereses)</td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_Voluntario }, new { @class = "btn btn-warning btn-sm" })
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Voluntario }, new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
