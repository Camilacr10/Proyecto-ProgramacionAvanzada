@model ProyectoPA.Mascota

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/listadoMascotas-layout.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <title>Perfil de Mascota</title>
    <style>
        
.title-text {
    font-size: 2.5rem;
    font-weight: bold;
    margin-top: -2rem;
    color: white;
    text-decoration: none;
}

.title-text-mascota {
    font-size: 3rem;
    font-weight: bold;
    margin-top: -2rem;
}

.btn-warning {
    background-color: #C66618;
    border: none;
    border-radius: 10px;
    color: white;
    
}
   
.btn-warning:hover {
    background-color: rgba(255, 255, 255, 0.443);
    color: #C66618;
}

.sobre-mi-box {
    background-color: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    min-height: 710px;
    height: auto;
}

.info-container {
    display: flex;
    justify-content: space-between;
    gap: 20px;
}

.info-item {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon-circle {
    background-color: #f6cf5e;
    width: 60px;
    height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    border-radius: 50%;
}

.icon-img {
    width: 30px;
    height: auto;
}

.info-text {
    margin-top: 10px;
    font-weight: bold;
    font-size: 1rem;
}

.container {
    padding-left: 10px;
    padding-right: 10px;
}

/* Datos médicos */

.box-group {
    gap: 30px;
}

.box {
    background-color: #fff;
    width: 75%;
    height: auto;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    padding: 5px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 40px;
}

.box-img {
    width: 40px;
    height: 40px;
}

.box-title {
    font-weight: bold;
    margin-top: 10px;
}

.box.empty {
    width: 40%;
    height: 150px;
    padding: 10px;
    background-color: transparent;
    border: none;
    box-shadow: none;
}

/* Requisitos */

.box-container {
    height: 100%;
    background-color: #f6cf5e;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    padding: 20px;
}

.title {
    margin-top: 10px;
    font-weight: bold;
    font-size: 1.5rem;
}

.divider {
    margin-left: 20px;
    margin-right: 50px;
}

.requirements-list {
    list-style-type: disc;
    padding: 20px;
}

.requirement-item {
    margin-left: 30px;
    font-size: 1rem;
    margin-bottom: 10px;
}

.footer {
    background-color: #f5a623; /* Color de fondo */
    color: white; /* Color de texto */
}

.footer p {
    margin: 0;
    font-size: 1rem;
}

.social-icons .icon {
    width: 24px; /* Tamaño de los iconos */
    height: 24px;
    transition: transform 0.3s ease; /* Efecto suave al hacer hover */
}

.social-icons a:hover .icon {
    transform: scale(1.2); /* Aumenta el tamaño del icono al pasar el mouse */
}

.estilo-imagen {
    max-width: 260px;
    max-height: 430px;
    text-align: center;
}
.welcome-section-perfil-mascota {
    background-image: url('/Imagenes/adopciones/banner.png');
    background-size: cover;
    background-position: center;
    height: 320px;
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}
    </style> 
    
</head>

<body>
    <div class=" full-width-background ">
    <div class="welcome-section-perfil-mascota">
        <header>
            <div class="container d-flex justify-content-between align-items-center py-2">
                <a href="Index.html" class="nav-link text-light">
                    <img src="~/Imagenes/adopciones/logo.png" alt="Logo" style="width: 100px;">
                </a>
                <nav class="d-none d-md-flex" style="padding-left: 10px;">
                    <ul class="nav">
                        <li class="nav-item"><a href="acercaNosotros.html" class="nav-link text-light">Acerca de Nosotros</a></li>
                        <li class="nav-item"><a href="/ListadoM/listado" class="nav-link text-light">Listado de Mascotas</a></li>
                        <li class="nav-item"><a href="donaciones.html" class="nav-link text-light">Donaciones</a></li>
                        <li class="nav-item">
                             <a href="/Adopcions/Index" class="nav-link text-light">Adopciones</a>
                        </li>
                    </ul>
                    <div id="auth-container" class="d-flex align-items-center">
                        <!-- Aquí se inyectará el contenido según el estado del usuario -->
                    </div>
                </nav>
            </div>
        </header>

        <section>
            <div class="d-flex justify-content-between mb-5">
                <div class="p-4">
                    <br><br><br>
                    <p class="title-text"><a href="/ListadoM/listado" class="title-text">
                            <i class="fas fa-chevron-left" style="margin-right: 20px;"></i>
                        </a>Perfil de Mascota</p>
                </div>
            </div>
        </section>
    </div>

     <div class="container mt-4">
        <div class="row align-items-center">

            <div class="col-12 col-md-6 d-flex justify-content-center">
                <div class="rounded-circle"
                    style="background-color: #d2691e; width: 70vw; height: 70vw; max-width: 500px; max-height: 500px; display: flex; align-items: center; justify-content: center;">
    
                 <div class="rounded-circle"
                 style="background-color: #f6cf5e; width: 80%; height: 80%; display: flex; align-items: center; justify-content: center; overflow: hidden;">
        
        <!-- Aquí se carga la imagen de la mascota -->
        <img src="@Model.ruta_imagen" alt="@Model.nombre"
             style="width: 100%; height: 100%; object-fit: contain; border-radius: 50%;">
    </div>
</div>

            </div>
            
            <div class="col-12 col-md-6 text-center">
                <div class="text-center">
                    <h1 class="title-text-mascota">@Model.nombre</h1>
                    <h5><b>Especie: </b><span>@Model.especie</span></h5>
                    <h5><b>Raza: </b><span>@Model.raza</span></h5>
                </div>

                <div class="d-flex justify-content-center justify-content-center mt-3 gap-4">
                    <div class="info-container">
                        <div class="info-item">
                            <div class="icon-circle">
                                <img src="~/Imagenes/perfilMascota/peso.png" class="icon-img">
                            </div>
                            <p class="info-text">@Model.peso kg</p>
                        </div>

                        <div class="info-item">
                            <div class="icon-circle">
                                <img src="~/Imagenes/perfilMascota/edad.png" class="icon-img">
                            </div>
                            <p class="info-text">@Model.edad años</p>
                        </div>

                        <div class="info-item">
                            <div class="icon-circle">
                                <img src="~/Imagenes/perfilMascota/sexo.png" class="icon-img">
                            </div>
                            <p class="info-text">@Model.sexo</p>
                        </div>
                    </div>
                </div>
                <button class="btn btn-warning rounded-pill mt-4" id="adoptar-btn"style="font-size: 1.5rem;"><b><a href="/Adopcions/Index" class="nav-link text-light">Adoptame</a></button>
            </div>
        </div>
    </div>
    <section>
    <br><br>
    <div class="container mt-4">
        <div class="row justify-content-center" style="gap: 5vh;">

            <!-- Sección "Sobre mí" -->
            <div class="col-md-8 col-lg-6 d-flex flex-column">
                <div class="rounded-5 p-4 sobre-mi-box">
                    <h2 class="text-center text-md-start" style="font-weight: bold; font-size: 1.5rem;">Sobre mí</h2>
                    <hr class="divider">
                    <p style="font-size: 1.2rem; line-height: 1.6;">
                        @Model.descripcion
                    </p>
                </div>
            </div>

            <!-- Sección de Datos Médicos y Requisitos -->
            <div class="col-md-6 col-lg-4 d-flex flex-column gap-4">

                <!-- Datos Médicos -->
                <div class="box-container rounded-5" style="background-color: #f6cf5e; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
                    <h2 class="text-center title">Datos Médicos</h2>
                    <hr class="divider">
                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        <span><b>Castrado:</b> @Model.castrado</span>
                        <span><b>Vacunado:</b> @Model.vacunado</span>
                        <span><b>Desparasitado:</b> @Model.desparasitado</span>
                    </div>
                </div>

                <!-- Requisitos -->
                <div class="box-container rounded-5" style="background-color: #f6cf5e; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
                    <h2 class="text-center title">Requisitos</h2>
                    <hr class="divider">
                    <ul class="requirements-list">
                        <li>Tener un espacio adecuado para la mascota</li>
                        <li>Compromiso con su cuidado y bienestar</li>
                        <li>Poder cubrir sus necesidades veterinarias</li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</section>


    <footer class="footer bg-warning text-white py-4 mt-5">
        <div class="container text-center">
            <p>&copy; Derechos Reservados</p>
            <div class="social-icons d-flex justify-content-center mt-3">
                <a href="#" class="mx-2"><img src="~/Imagenes/adopciones/logoFacebook.svg" alt="Facebook" class="icon"></a>
                <a href="#" class="mx-2"><img src="~/Imagenes/adopciones/logoInsta.png" alt="Instagram" class="icon"></a>
                <a href="#" class="mx-2"><img src="~/Imagenes/adopciones/logoTwitter.svg" alt="Twitter" class="icon"></a>
            </div>
        </div>
    </footer>
        </div>
    
    <script src="js/perfilMascota.js"></script>
</body>
<script src="js/usuario.js"></script>
</html>