@model IEnumerable<ProyectoPA.Adopcion>

@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adopciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="full-width-background">
        <div class="welcome-section-adopciones ">
            <header>
                <div class="container d-flex justify-content-between align-items-center py-2">
                    <a href="Index.html" class="nav-link text-light">
                        <img src="~/Imagenes/adopciones/logo.png" alt="Logo" style="width: 100px;">
                    </a>
                    <nav class="d-none d-md-flex" style="padding-left: 10px;">
                        <ul class="nav">
                            <li class="nav-item"><a href="acercaNosotros.html" class="nav-link text-light">Acerca de Nosotros</a></li>
                            <li class="nav-item"><a href="/ListadoM/listado" class="nav-link text-light">Listado de Mascotas</a></li>
                            <li class="nav-item"><a href="donaciones.html" class="nav-link text-light">Donaciones</a></li>
                            <li class="nav-item">
                                <a href="/Adopcions/Index" class="nav-link text-light">Adopciones</a>
                            </li>

                        </ul>
                        <div id="auth-container" class="d-flex align-items-center">
                        </div>
                    </nav>
                </div>
            </header>

            <section>
                <br><br><br>
                <div class="d-flex justify-content-between ">
                    <div class="container-left-align">
                        <div class="p-2 flex-shrink-1">
                            <p class="title-text-adopciones"><b>Salvando Animales Cambiando Vidas</b></p>
                            <button class="btn btn-dark mt-4">
                                <a href="donaciones-monetarias.html" class="text-white text-decoration-none">Quiero Donar!</a>
                            </button>
                        </div>

                        <div class="p-2 w-50">
                            <img src="~/Imagenes/adopciones/perroygato2.png" alt="Perro-y-gato2-banner" class="banner-img-adopciones">
                        </div>
                    </div>

                </div>
            </section>
        </div><br><br><br><br><br><br>
        <div class="contenedor">
            <img src="~/Imagenes/adopciones/imgAdopciones.jpg" alt="Fondo Naranja">
            <h1>Adopta</h1>
        </div>


        <!-- Beneficios de Adoptar -->
        <div class="container my-5">
            <h2 class="section-title text-center mb-4">¿Por qué Adoptar?</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card text-center p-4">
                        <div class="card-icon">❤️</div>
                        <h5 class="card-title mt-3">Salvas una Vida</h5>
                        <p class="card-text">Al adoptar, le das una segunda oportunidad a una mascota que necesita un hogar y cariño.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center p-4">
                        <div class="card-icon">🌍</div>
                        <h5 class="card-title mt-3">Impacto Positivo</h5>
                        <p class="card-text">La adopción contribuye a reducir la sobrepoblación de animales en situación de calle.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center p-4">
                        <div class="card-icon">🤝</div>
                        <h5 class="card-title mt-3">Fidelidad y Compañía</h5>
                        <p class="card-text">Ganas un compañero fiel y contribuyes a mejorar su calidad de vida.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Requisitos para Adoptar -->
        <div class="container my-5">
            <h2 class="section-title text-center mb-4">Requisitos </h2>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-7">
                    <ul class="list-group text-center">
                        <li class="list-group-item">Ser mayor de edad (18 años o más).</li>
                        <li class="list-group-item">Contar con un espacio adecuado para la mascota.</li>
                        <li class="list-group-item">Compromiso de brindar atención y cuidados veterinarios.</li>
                        <li class="list-group-item">Esterilizar a la mascota si aún no lo está.</li>
                        <li class="list-group-item">Aceptar una visita de seguimiento, si es necesario.</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Pasos para el Proceso de Adopción -->
        <div class="container my-5">
            <h2 class="section-title text-center mb-4">Pasos para Adoptar</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card h-100 p-4">
                        <h5 class="card-title">1. Revisión de requisitos</h5>
                        <p class="card-text">Asegúrate de cumplir con los requisitos necesarios para adoptar.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 p-4">
                        <h5 class="card-title">2. Selecciona una mascota</h5>
                        <p class="card-text">Consulta nuestro listado de mascotas y elige a tu nuevo amigo.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 p-4">
                        <h5 class="card-title">3. Completa la solicitud</h5>
                        <p class="card-text">Llena el formulario de solicitud de adopción al final de esta página.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 p-4">
                        <h5 class="card-title">4. Entrevista</h5>
                        <p class="card-text">Un miembro de nuestro equipo se pondrá en contacto para una entrevista.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 p-4">
                        <h5 class="card-title">5. Visita de seguimiento</h5>
                        <p class="card-text">Realizamos una visita para asegurar un buen entorno para la mascota.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 p-4">
                        <h5 class="card-title">6. Adopción finalizada</h5>
                        <p class="card-text">Si todo está en orden, podrás llevar a tu nueva mascota a casa.</p>
                    </div>
                </div>
            </div>
        </div>



        <!-- Formulario de Solicitud de Adopción -->
        <div class="container my-5">
            <div class="row align-items-center">
                <!-- Formulario -->
                <div class="col-md-6">
                    <div class="form-container" id="formulario-adopcion">
                        <h2>Formulario de Solicitud de Adopción</h2>
                        <div id="mensajeConfirmacion" class="alert alert-success d-none" role="alert">
                            ¡Solicitud enviada con éxito!
                        </div>

                        <form id="adopcionForm" onsubmit="mostrarMensaje(); return false;">
                            <div class="mb-3">
                                <label for="mascota" class="form-label">Mascota que deseas adoptar</label>
                                @Html.DropDownList("mascota", ViewBag.MascotasDisponibles as SelectList,
                                                   "Selecciona una mascota",
                                                   new { @class = "form-control", @required = "required" })
                            </div>
                            <div class="mb-3">
                                <label for="razones" class="form-label">¿Por qué deseas adoptar esta mascota?</label>
                                <textarea class="form-control" id="razones" name="razones" rows="4" placeholder="Explica tus motivos" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100 mt-3">Enviar Solicitud</button>
                        </form>
                    </div>

                </div>
                <!-- Script simple para mostrar el mensaje -->
                <script>
                    function mostrarMensaje() {
                        const mensaje = document.getElementById('mensajeConfirmacion');
                        mensaje.classList.remove('d-none'); // Muestra el mensaje
                    }
                </script>

                <!-- Imagen al lado del formulario -->
                <div class="col-md-6 img-container">
                    <img src="~/Imagenes/adopciones/adopciones.png" alt="Mascota en adopción" class="img-fluid">
                </div>
            </div>
        </div>
    </div>

    <footer class="footer bg-warning text-white py-4 full-width-background">
        <div class="container text-center">
            <p>&copy; Derechos Reservados</p>
            <div class="social-icons d-flex justify-content-center mt-3">
                <a href="#" class="mx-2"><img src="~/Imagenes/adopciones/logoFacebook.svg" alt="Facebook" class="icon"></a>
                <a href="#" class="mx-2"><img src="~/Imagenes/adopciones/logoInsta.png" alt="Instagram" class="icon"></a>
                <a href="#" class="mx-2"><img src="~/Imagenes/adopciones/logoTwitter.svg" alt="Twitter" class="icon"></a>
            </div>
        </div>
    </footer>
    <script src="js/adopciones.js"></script>
    <script src="js/usuario.js"></script>
    

</body>
</html>